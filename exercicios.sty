.exercise-dots {
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 1.5em;
}
.exercise-dots-list {
  display: flex;
  gap: 0.5em;
  list-style: none;
  padding: 0;
  margin: 0;
}
.exercise-dot,
.exercise-dot-home {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: #ccc;
  display: inline-block;
  border: 2px solid #888;
  transition: background 0.2s, border 0.2s;
}
.exercise-dot.current {
  background: #1976d2;
  border-color: #1976d2;
}
.exercise-dot-home {
  color: #000;
  text-align: center;
  line-height: 16px;
  font-weight: bold;
}
.exercise-dot-link {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.exercise-dot:hover,
.exercise-dot-link:focus .exercise-dot {
  background: #90caf9;
}
.dot-tooltip {
  visibility: hidden;
  opacity: 0;
  background: #222;
  color: #fff;
  text-align: center;
  border-radius: 4px;
  padding: 2px 8px;
  position: absolute;
  z-index: 10;
  left: 50%;
  transform: translateX(-50%);
  bottom: 130%;
  font-size: 0.85em;
  white-space: nowrap;
  pointer-events: none;
  transition: opacity 0.2s;
}
.exercise-dots-list li {
  position: relative;
}
.exercise-dot-link:hover + .dot-tooltip,
.exercise-dot-link:focus + .dot-tooltip,
.exercise-dot:hover + .dot-tooltip {
  visibility: visible;
  opacity: 1;
}
.exercise-dot.current:hover ~ .dot-tooltip,
.exercise-dot.current:focus ~ .dot-tooltip {
  visibility: visible;
  opacity: 1;
}
.exercise-dot-link:focus + .dot-tooltip,
.exercise-dot:hover + .dot-tooltip {
  visibility: visible;
  opacity: 1;
}
.exercise-dot.current:hover ~ .dot-tooltip,
.exercise-dot.current:focus ~ .dot-tooltip {
  visibility: visible;
  opacity: 1;
}
